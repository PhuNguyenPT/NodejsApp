{
  "name": "nodejs-app",
  "version": "1.0.0",
  "description": "An Express.js template with TypeScript, ESLint and Prettier",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch --env-file .env.dev src/app/index.ts",
    "dev:staging": "tsx --watch --env-file .env.staging src/app/index.ts",
    "dev:prod": "tsx --watch --env-file .env.prod src/app/index.ts",
    "start": "node --env-file .env.prod dist/app/index.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  },
  "_moduleAliases": {
    "@/app": "dist/app",
    "@/config": "dist/config",
    "@/controller": "dist/controller",
    "@/entity": "dist/entity",
    "@/handler": "dist/handler",
    "@/middleware": "dist/middleware",
    "@/service": "dist/service",
    "@/type": "dist/type",
    "@/util": "dist/util"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PhuNguyenPT/NodejsApp.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PhuNguyenPT/NodejsApp/issues"
  },
  "homepage": "https://github.com/PhuNguyenPT/NodejsApp#readme",
  "dependencies": {
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "envalid": "^8.1.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/joi": "^17.2.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.10",
    "@types/pg": "^8.15.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-perfectionist": "^4.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
