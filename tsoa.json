{
  "entryFile": "src/app/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controller/**/*.ts"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/app/*": ["app/*"],
      "@/config/*": ["config/*"],
      "@/controller/*": ["controller/*"],
      "@/dto/*": ["dto/*"],
      "@/entity/*": ["entity/*"],
      "@/generated/*": ["generated/*"],
      "@/mapper/*": ["mapper/*"],
      "@/middleware/*": ["middleware/*"],
      "@/repository/*": ["repository"],
      "@/service/*": ["service/*"],
      "@/type/*": ["type/*"],
      "@/util/*": ["util/*"]
    }
  },
  "spec": {
    "outputDirectory": "src/generated",
    "specVersion": 3,
    "schemes": ["http", "https"],
    "securityDefinitions": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "routes": {
    "routesDir": "src/generated",
    "middleware": "express"
  }
}
